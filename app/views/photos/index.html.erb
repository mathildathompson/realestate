<section class="wrapper-lg bg-highlight">
    <div class="container">
        <h1>Property Photos</h1>
        <br class="spacer-lg">
        <div class="row isotope-container">
            <% @photos.each do |photo| %>
                <div class="col-sm-6 col-md-4 col-lg-3 isotope-item design">
                    <p>Property ID: <%= link_to(photo.property_id, property_path(photo.property_id)) %></p>
                    <div class="thumbnail">
                        <%= link_to(image_tag(photo.photo1), photo) %>
                    </div><!-- /.thumbnail -->
                    <div class="thumbnail">
                        <%= link_to(image_tag(photo.photo2), photo) %>
                    </div>
                    <div class="thumbnail">
                        <%= link_to(image_tag(photo.photo3), photo) %>
                    </div>
                    <div class="thumbnail">
                        <%= link_to(image_tag(photo.photo4), photo) %>
                    </div>
                    <div class="thumbnail">
                        <%= link_to(image_tag(photo.photo5), photo) %>
                    </div>
                    <div class="thumbnail">
                        <%= link_to(image_tag(photo.photo6), photo) %>
                    </div>
                </div><!-- /.col -->
            <% end %> 
        </div><!-- /.row -->           
    </div><!-- /.container -->
</section>

