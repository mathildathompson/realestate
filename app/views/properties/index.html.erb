                                        <label>Go...</label> 
                                        <button class="btn btn-primary btn-block">Search</button>
                                    </div>
                                </form> 
                            </div><!-- /.widget -->    
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container -->
            </section>

