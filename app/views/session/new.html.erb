<section class="wrapper-lg bg-highlight">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3">
                <h1>Sign In</h1>
                <hr>  
                <%= form_tag "/login" do %>
                    <div class="form-group">
                    <%= label_tag :name %>
                    <%= text_field_tag :name, nil, :placeholder => 'Enter name', :class => 'form-control' %>
                    
                    <%= label_tag :password %>
                    <%= password_field_tag :password, nil, :placeholder => 'Enter password', :class => 'form-control' %>
                    </div>
                    <%= submit_tag 'Confirm', class: 'btn btn-primary' %>
                <% end %>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section>

