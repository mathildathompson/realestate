<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
<% end %>

<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :gender %>
    <%= f.text_field :gender %>

    <%= f.label :age %>
    <%= f.text_field :age %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :address_number %>
    <%= f.text_field :address_number %>

    <%= f.label :address_street %>
    <%= f.text_field :address_street %>

    <%= f.label :address_city %>
    <%= f.text_field :address_city %>

    <%= f.label :address_state %>
    <%= f.text_field :address_state %>

    <%= f.label :address_code %>
    <%= f.text_field :address_code %>

    <%= f.label :address_country %>
    <%= f.text_field :address_country %>

    <%= f.label :password %>
    <%= f.password_field :password %>
    
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit %>
<% end %>