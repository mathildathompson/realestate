<section class="wrapper-lg bg-highlight">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-1">
                <h1 class="text-info">Create an account</h1>
                <hr>
                <form role="form">
                    <%= form_for @user do |f| %>
                    <div class="form-group">
                        <%= f.label :name %>
                        <%= f.text_field :name, :class => "form-control", :placeholder => "Full Name" %> 
                    </div>
                    <div class="form-group">
                        <%= f.label :email, 'Email address' %>
                        <%= f.text_field :email, :class => "form-control", :placeholder => "Enter email" %> 
                    </div>
                    <div class="form-group">
                        <%= f.label :age %>
                        <%= f.text_field :age, :class => "form-control", :placeholder => "Your age" %> 
                    </div>
                    <div class="form-group">
                        <%= f.label :gender %>
                        <%= f.text_field :gender, :class => "form-control", :placeholder => "Male/Female" %> 
                    </div>
                    <div class="form-group">
                        <%= f.label :password %>
                        <%= f.text_field :password, :class => "form-control", :placeholder => "Choose password" %>
                    </div>
                    <div class="form-group">
                        <%= f.label :password_confirmation %>
                        <%= f.text_field :password_confirmation, :class => "form-control", :placeholder => "Confirm password" %>
                    </div>
                </div>

                <div class="col-sm-6 col-md-4 col-md-offset-1"> 
                    <h1><br></h1>
                    <hr>       
                    <div class="form-group">
                        <%= f.label :address_number, 'Address: Flat/House No.' %>
                        <%= f.text_field :address_number, :class => "form-control", :placeholder => "Street number" %> 
                    </div>
                    <div class="form-group">
                        <%= f.label :address_street, 'Address: Street' %>
                        <%= f.text_field :address_street, :class => "form-control", :placeholder => "Street name" %>
                    </div>
                    <div class="form-group">
                        <%= f.label :address_city, 'Address: City' %>
                        <%= f.text_field :address_city, :class => "form-control", :placeholder => "City" %>
                    </div>
                    <div class="form-group">
                        <%= f.label :address_state, 'Address: State' %>
                        <%= f.text_field :address_state, :class => "form-control", :placeholder => "State" %>
                    </div>
                    <div class="form-group">
                        <%= f.label :address_code, 'Address: Post Code' %>
                        <%= f.text_field :address_code, :class => "form-control", :placeholder => "Post code" %>
                    </div>
                    <div class="form-group">
                        <%= f.label :address_country, 'Address: Country' %>
                        <%= f.text_field :address_country, :class => "form-control", :placeholder => "Country" %>
                    </div>
                    <%= f.submit :class => "btn btn-info" %>
                    <% end %>
                </form>

                <% if @user.errors.any? %>
                    <% @user.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                <% end %>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section>

