<section class="wrapper-lg bg-highlight">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3">
                <h1>Complete Transaction</h1>
                    <hr>
                    <h3>Release Funds</h3>
                    <p>Please enter one or more signatures (your Privkey) and the 'redeemScript'. (Note: This URL can be shared with others in your party to enter their signature if required.)</p>
                    <hr>
                    <%= form_tag('/bitcoins/complete') do %>
                    <div class="form-group">
                        <%= label_tag :multisig %>
                        <%= text_field_tag :multisig %>
                    </div>
                    <hr>
                    <div class="form-group">
                        <%= label_tag :script %>
                        <%= text_area_tag :script %>
                    </div>
                    <hr>
                    <%= submit_tag 'Confirm' %>
                <% end %>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section>