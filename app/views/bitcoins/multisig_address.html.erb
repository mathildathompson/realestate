<section class="wrapper-lg bg-highlight">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3">
                <h1>Your Keys Are Now Linked to One Address!</h1>
                    <hr>
                    <h3>Your New Multisig Address</h3>
                    <%= @multisig_address %>
                    <hr>
                    <h3>redeemScript</h3>
                    <%= @redeem_script %>
                    <hr>
                    <%= form_tag('/bitcoins/transaction') do %>
                    <div class="form-group">
                        <%= label_tag :multisig %>
                        <%= text_field_tag :multisig %>
                    </div>
                    <hr>
                    <div class="form-group">
                        <%= label_tag :script %>
                        <%= text_area_tag :script %>
                    </div>
                    <hr>
                    <p>Please now transfer your funds into the Bitcoin multisig address. And please keep your 'redeemScript' safe as this will also be required in order to release the funds.</p>
                    <hr>
                    <%= submit_tag 'Send' %>
                <% end %>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</section>